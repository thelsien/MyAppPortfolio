<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apps.nanodegree.thelsien.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/screen_title"
        android:textAlignment="center"
        android:textSize="26sp" />

    <Button
        android:id="@+id/button3"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/popular_movies" />

    <Button
        android:id="@+id/button4"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/stock_hawk" />

    <Button
        android:id="@+id/button5"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/build_it_bigger" />

    <Button
        android:id="@+id/button6"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/make_your_app_material" />

    <Button
        android:id="@+id/button7"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/go_ubiquitous" />

    <Button
        android:id="@+id/button8"
        style="@style/ColoredButton"
        android:onClick="onAppButtonClicked"
        android:text="@string/capstone" />
</LinearLayout>